<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textSize="40sp"

        />


    <TextView
        android:id="@+id/conditionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="100dp"
        android:text="Умова" />

    <TextView
        android:id="@+id/option1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conditionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Варіант 1" />

    <TextView
        android:id="@+id/option2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/option1TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Варіант 2" />

    <Button
        android:id="@+id/chooseOption1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/option2TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Обрати варіант 1" />

    <Button
        android:id="@+id/chooseOption2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseOption1Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Обрати варіант 2" />

</RelativeLayout>